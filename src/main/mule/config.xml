<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:sap="http://www.mulesoft.org/schema/mule/sap"
	xmlns:salesforce="http://www.mulesoft.org/schema/mule/salesforce"
	xmlns="http://www.mulesoft.org/schema/mule/core" xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
http://www.mulesoft.org/schema/mule/salesforce http://www.mulesoft.org/schema/mule/salesforce/current/mule-salesforce.xsd
http://www.mulesoft.org/schema/mule/sap http://www.mulesoft.org/schema/mule/sap/current/mule-sap.xsd">

	<configuration-properties doc:name="Configuration properties"
		doc:id="7584fb1d-2fa2-445a-b949-eed01f5785bd" file="common.properties" />
	<configuration-properties doc:name="Configuration properties"
		doc:id="86e0eb9d-cf2e-451a-9e09-b4afdf13e0e9" file="mule.${mule.env}.properties" />
	<configuration-properties doc:name="Configuration properties"
		doc:id="0abdf143-d5d1-4168-bdbd-7e3722442725" file="mule-artifact.properties" />

	<sap:inbound-config name="SAP_Inbound" doc:name="SAP Inbound"
		doc:id="30d4daa4-098f-4c57-abf2-df25877f2a53">
		<sap:simple-connection-provider-connection
			applicationServerHost="${sap.jco.ashost}" username="${sap.jco.user}"
			password="${sap.jco.passwd}" systemNumber="${sap.jco.sysnr}" client="${sap.jco.client}"
			language="${sap.jco.lang}" />
	</sap:inbound-config>

	<salesforce:sfdc-config name="Salesforce"
		doc:name="Salesforce" doc:id="635cce3a-8d68-4c3d-b12a-5c1e09bbb442">
		<salesforce:basic-connection username="${sfdc.username}"
			password="${sfdc.password}" securityToken="${sfdc.securityToken}" />
	</salesforce:sfdc-config>

</mule>

        